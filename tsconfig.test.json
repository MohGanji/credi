{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*.test.ts",
    "app/**/*.spec.ts",
    "app/**/__tests__/**/*.ts"
  ]
}
